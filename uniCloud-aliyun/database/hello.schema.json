// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
  "bsonType": "object",
  "required": ["name"],
  "permission": {
    "read": true,
    "create": true,
    "update": true,
    "delete": true
  },
  "properties": {
    "_id": {
      "description": "ID"
    },
    "name": {
      "bsonType": "string",
      "label": "%name%",
      "minLength": 1,
      "maxLength": 8,
      "errorMessage": {
        "format": "{label}%name.format%",
        "minLength": "{label}%name.minLength%",
        "maxLength": "{label}%name.maxLength%"
      }
    }
  }
}
